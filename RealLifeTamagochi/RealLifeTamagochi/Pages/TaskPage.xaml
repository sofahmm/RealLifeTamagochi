<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealLifeTamagochi.Pages.TaskPage"
             Visual="Material"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <StackLayout>
                <Label Text="Задача" 
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       Margin="0, 0, 0,20"
                       TextColor="Black"/>
            </StackLayout>
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="&#xea67;"
                       FontFamily="TamaFont"
                       TextColor="Black"
                       HorizontalOptions="Start"/>
                    <Entry Placeholder="Название задачи:"
                           WidthRequest="340"
                        BackgroundColor="White"
                           HorizontalOptions="End"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="&#xe253;"
                       FontFamily="TamaFont"
                       TextColor="Black"
                           HorizontalOptions="Start"/>
                    <Editor HeightRequest="75"
                    Placeholder="Описание:"
                            WidthRequest="340"
                        BackgroundColor="White"
                            HorizontalOptions="End"/>
                </StackLayout>
                
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal">
                    <Label Text="&#xea23;"
                       FontFamily="TamaFont"
                       TextColor="Black"
                       HorizontalOptions="StartAndExpand"/>
                    <Picker x:Name="pick_reward"
                        SelectedIndexChanged="pick_reward_SelectedIndexChanged"
                        Title="Награда:"
                        BackgroundColor="White"
                            WidthRequest="340"
                            HorizontalOptions="EndAndExpand">
                        <Picker.Items>
                            <x:String>25 xp</x:String>
                            <x:String>50xp</x:String>
                            <x:String>75 xp</x:String>
                            <x:String>100 xp</x:String>
                            <x:String>125 xp</x:String>
                            <x:String>150 xp</x:String>
                            <x:String>175 xp</x:String>
                            <x:String>200xp</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="&#xe8df;"
                       FontFamily="TamaFont"
                           TextColor="Black"
                           HorizontalOptions="StartAndExpand"/>
                    <DatePicker BackgroundColor="White" 
                            Format="D" 
                                WidthRequest="340"
                                HorizontalOptions="EndAndExpand"
                            DateSelected="DatePicker_DateSelected"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                <Button x:Name="btn_save"
                        Clicked="btn_save_Clicked"
                    Text="Сохранить"
                        Margin="15"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>