<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealLifeTamagochi.Pages.RegistrationPage"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Регистрация"
                   HorizontalTextAlignment="Center"
                   TextColor="Black"
                   Margin="0,50,0,0"/>
            </StackLayout>
            <StackLayout Padding="10">
                <Entry Placeholder="Имя"
                       FontSize="Medium"
                       Margin="5"/>
                <Entry Placeholder="Логин"
                       FontSize="Medium"
                       Margin="5"/>
                <Entry Placeholder="Пароль"
                       IsPassword="True"
                       FontSize="Medium"
                       Margin="5"/>
            </StackLayout>
            <StackLayout  Orientation="Vertical">
                <Button Text="Зарегистрироваться"
                        x:Name="btn_ok"
                        Clicked="btn_ok_Clicked"/>
                <Image Source="registr" HeightRequest="150" WidthRequest="75"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>